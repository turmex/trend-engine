{# ════ NEWS ════ #}
{% if analysis and analysis.news and analysis.news.headlines %}
<div style="padding:24px;">
    <h2 style="font-size:17px;margin:0 0 4px;">News Headlines</h2>
    <p style="font-size:12px;color:#6b7280;margin:0 0 12px;">Relevant news from the past week</p>
    <table style="width:100%;border-collapse:collapse;font-size:13px;">
        <tbody>
        {% for item in analysis.news.headlines %}
        <tr><td style="padding:8px 10px;border-bottom:1px solid #f0f0f0;">
            {% if item.url %}
            <a href="{{ item.url }}" style="color:#2563eb;text-decoration:none;font-weight:500;">{{ item.title }}</a>
            {% else %}
            <span style="font-weight:500;">{{ item.title }}</span>
            {% endif %}
            <div style="font-size:11px;color:#9ca3af;margin-top:2px;">
                {% if item.source %}{{ item.source }}{% endif %}
                {% if item.date %} &middot; {{ item.date }}{% endif %}
            </div>
        </td></tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}
