{# ════ QUORA ════ #}
{% if analysis and analysis.quora and analysis.quora.questions %}
<div style="padding:24px;">
    <h2 style="font-size:17px;margin:0 0 4px;">Quora -- Trending Questions</h2>
    <p style="font-size:12px;color:#6b7280;margin:0 0 12px;">What people are actively asking about</p>
    <table style="width:100%;border-collapse:collapse;font-size:13px;">
        <tbody>
        {% for q in analysis.quora.questions %}
        <tr><td style="padding:8px 10px;border-bottom:1px solid #f0f0f0;">
            <a href="{{ q.url | default('#') }}" style="color:#2563eb;text-decoration:none;">{{ q.title }}</a>
            {% if q.query %}
            <div style="font-size:11px;color:#9ca3af;">Quora &middot; query: "{{ q.query }}"</div>
            {% endif %}
        </td></tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}
